@model AccreditSolutionsHR.Models.TableVM<AccreditSolutionsHR.Models.EmployeeTableRowVM>
<style>
    .tableHeader:hover{
        background-color:red;
    }
</style>
<table class="table">
    <tr>
        <th class="tableHeader" id="1">
            Name
        </th>
        <th class="tableHeader" id="2">
            @Html.DisplayNameFor(model => model.Data.FirstOrDefault().DOB)
        </th>
        <th class="tableHeader" id="3">
            Department
        </th>
        <th class="tableHeader" id="4">
            @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Status)
        </th>
        <th class="tableHeader" id="5">
            @Html.DisplayNameFor(model => model.Data.FirstOrDefault().EmployeeNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                @item.FullName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@for(int i = 0; i < Model.PageCount; i++)
{
    <button id="@(i+1)" class="btnPage">@(i+1)</button>
}


<script>
    $(".btnPage").click(function () {
        filters.page = this.id;
        console.log(filters.page);
        loadPartial();
    });

    $(".tableHeader").click(function () {
        filters.orderColumn = this.id;
        filters.orderDirection = (filters.orderDirection == 0) ? 1 : 0;
        loadPartial();
    });
</script>